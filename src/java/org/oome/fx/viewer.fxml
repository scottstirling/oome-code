<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.oome.fx.v1.ViewerController">
   <top>
      <HBox fx:id="topPanel" alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Button fx:id="openButton" onAction="#handleOpenFile" text="Open .class File..." />
            <Label fx:id="statusBar" text="Please select a class file to analyze." />
         </children>
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.3" BorderPane.alignment="CENTER">
        <items>
          <VBox spacing="10.0">
               <children>
                  <TitledPane animated="false" collapsible="false" text="Class Overview">
                     <content>
                        <TextArea fx:id="summaryArea" editable="false" wrapText="true" />
                     </content>
                  </TitledPane>
                  <TitledPane animated="false" collapsible="false" text="Method Inspector">
                     <content>
                        <ComboBox fx:id="methodSelector" maxWidth="1.7976931348623157E308" promptText="Select a method..." />
                     </content>
                  </TitledPane>
               </children>
          </VBox>
          <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
              <Tab text="Method Bytecode">
                   <content>
                      <ScrollPane fitToHeight="true" fitToWidth="true">
                         <content>
                            <TextArea fx:id="bytecodeArea" editable="false" />
                         </content>
                      </ScrollPane>
                   </content>
              </Tab>
              <Tab text="Hex Dump">
                   <content>
                      <ScrollPane fitToHeight="true" fitToWidth="true">
                         <content>
                            <TextArea fx:id="hexArea" editable="false" />
                         </content>
                      </ScrollPane>
                   </content>
              </Tab>
            </tabs>
          </TabPane>
        </items>
      </SplitPane>
   </center>
</BorderPane>
